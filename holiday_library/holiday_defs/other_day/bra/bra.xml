<?xml version="1.0" encoding="UTF-8"?>
<holidays xmlns="https://kayaposoft.com/enrico/xsd/1.0" country="bra">
	<metadata>
		<reference>https://en.wikipedia.org/wiki/Daylight_saving_time_by_country</reference>
		<reference>https://en.wikipedia.org/wiki/Mother's_Day</reference>
		<reference>https://en.wikipedia.org/wiki/Father%27s_Day</reference>
	</metadata>
	
	<holiday validFrom="2018-01-01" holidayType="other_day">
		<date>
			<nthWeekdayRuleDate dayOfWeek="7" month="11" nth="1" />
		</date>
		<name lang="pt">Começa o horário de verão</name>
		<name lang="en">Daylight Saving Time Starts</name>
		<note lang="pt">Os relógios devem ser adiantados em uma hora das 00:00 para as 01:00 horas</note>
		<note lang="en">A one-hour shift occurs at 00:00 local time, the clock jumps forward to 01:00</note>
	</holiday>
	
	<holiday validFrom="2018-01-01" holidayType="other_day">
		<date>
			<nthWeekdayRuleDate dayOfWeek="7" month="5" nth="2" />
		</date>
		<name lang="pt">Dia da Mãe</name>
		<name lang="en">Mother's Day</name>
	</holiday>
	
	<holiday validFrom="2018-01-01" holidayType="other_day">
		<date>
			<nthWeekdayRuleDate dayOfWeek="7" month="8" nth="2" />
		</date>
		<name lang="pt">Dia dos Pais</name>
		<name lang="en">Father's Day</name>
	</holiday>
	
	<holiday validFrom="2018-01-01" validTo="2023-01-01" holidayType="other_day">
		<date>
			<nthWeekdayRuleDate dayOfWeek="7" month="2" nth="3" />
		</date>
		<name lang="pt">Termina o horário de verão</name>
		<name lang="en">Daylight Saving Time Ends</name>
		<note lang="pt">Os relógios devem ser retrocedidos em uma hora das 00:00 para as 23:00 horas</note>
		<note lang="en">A one-hour shift occurs at 00:00 local time, the clock jumps backward to 23:00</note>
	</holiday>
	
</holidays>