<?xml version="1.0" encoding="UTF-8"?>
<holidays xmlns="https://kayaposoft.com/enrico/xsd/1.0" country="can">

	<metadata>
		<reference>http://www.payworks.ca/Payroll-Legislation/StatHolidays.asp?stats=nunavut</reference>
		<reference>http://www.statutoryholidays.ca/nunavut-statutory-holidays.html</reference>
		<reference>http://www.workrights.ca/content.php?doc=15</reference>
	</metadata>

	<holiday validFrom="2011-01-01">
		<date>
			<dateTransformation>
				<baseDate>
					<specialDate>EASTER_SUNDAY</specialDate>
				</baseDate>
				<addDays>-2</addDays>
			</dateTransformation>
		</date>
		<name lang="en">Good Friday</name>
		<name lang="fr">Vendredi saint</name>
	</holiday>

	<holiday validFrom="2011-01-01">
		<date>
			<dateTransformation>
				<baseDate>
					<fixedDate day="17" month="5" />
				</baseDate>
				<nearestWeekdayAfter dayOfWeek="1" />
			</dateTransformation>
		</date>
		<name lang="en">Victoria Day</name>
		<name lang="fr">Fête de la Reine ou Journée nationale des Patriotes</name>
	</holiday>
	
	<holiday validFrom="2011-01-01">
		<date>
			<fixedDate day="1" month="7" />
		</date>
		<observanceRule dayOfWeek="7" addDays="1" additionalHoliday="false" />
		<name lang="en">Canada Day</name>
		<name lang="fr">Fête du Canada</name>
	</holiday>
	
	<holiday validFrom="2011-01-01">
		<date>
			<fixedDate day="9" month="7" />
		</date>
		<name lang="en">Nunavut Day</name>
		<name lang="fr">Jour De Nunavut</name>
		<flag>OPTIONAL_HOLIDAY</flag>
	</holiday>
	
	
	<holiday validFrom="2011-01-01">
		<date>
			<nthWeekdayRuleDate dayOfWeek="1" month="8" nth="1" />
		</date>
		<name lang="en">Civic Holiday</name>
		<name lang="fr">Premier lundi d'août</name>
	</holiday>
	
	<holiday validFrom="2011-01-01">
		<date>
			<nthWeekdayRuleDate dayOfWeek="1" month="10" nth="2" />
		</date>
		<name lang="en">Thanksgiving Day</name>
		<name lang="fr">Action de grâce</name>
	</holiday>
	
	<holiday validFrom="2011-01-01">
		<date>
			<fixedDate day="11" month="11" />
		</date>
		<name lang="en">Remembrance Day</name>
		<name lang="fr">Jour du Souvenir</name>
	</holiday>

</holidays>